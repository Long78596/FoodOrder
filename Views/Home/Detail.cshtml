<section class="product-comments py-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="mb-4">BÌNH LUẬN</h3>
                <div class="comment-form mb-5">
                    <h4 class="mb-3"> GỬI BÌNH LUẬN</h4>
                    <form asp-action="CommentFood" asp-controller="Home" method="post">
                        <input type="hidden" asp-for="@Model.Foods.Id" name="FoodId" />
                        <div class="mb-3">
                            <span asp-validation-for="@Model.Name" class="text-danger"> </span>
                            <input type="text" asp-for="@Model.Name"  class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="mb-3">
                        <input type="hidden" name="Star" value="4" />
                        </div>
                         
                        <div class="mb-3">
                            <textarea asp-for="@Model.Comment" class="form-control" rows="5" placeholder="Your Comment" required></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Comment"></span>
                        </div>
                        <button type="submit" class="btn site-btn">Submit</button>
                    </form>
                </div>
                <div class="comments-list">
                    <h4 class="mb-4">Comments</h4>
                    @if (ViewBag.Comments != null)
                    {
                        @foreach (var comment in ViewBag.Comments)
                        {
                            <div class="single-comment mb-4 p-3 border rounded">
                                <h5>@comment.Name</h5>
                                <p>@comment.Comment</p>
                                <span class="text-muted">Gửi vào March 15, 2024</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Chưa có bình luận nào.</p>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (ViewBag.RelatedProducts != null && ((IEnumerable<FoodModel>)ViewBag.RelatedProducts).Any())
            {
                <div class="row">
                    @foreach (var relatedProduct in ViewBag.RelatedProducts as IEnumerable<FoodModel>)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="img/product/product-1.jpg">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="#">@relatedProduct.Title</a></h6>
                                    <h5>@relatedProduct.Price</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Không có sản phẩm liên quan.</p>
            }

            
        </div>
    </div>
</section>
