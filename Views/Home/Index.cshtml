@model IEnumerable<FoodModel>
@{
    ViewData["Title"] = "Home Page";
}
<!-- Categories Section End -->
<!-- Featured Section Begin -->
@Html.Partial("_CategoriesPartial")



<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>MÓN ĂN NỔI BẬT</h2>
                </div>
                <div class="featured__controls">
                    
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/image/food/@item.Image">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a asp-action="AddToCart" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-action="Detail" asp-controller="Home" asp-route-Id="@item.Id">@item.Title</a></h6>
                            <h5>@item.Price.ToString("#,##0 VND")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<!-- Banner End -->
<!-- Latest Product Section Begin -->
<section class="latest-product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="latest-product__text">
                    <h4>Món ăn mới nhất</h4>
                    <div class="latest-product__slider owl-carousel">
                       
                        <div class="latest-prdouct__slider__item">
                            @foreach (var food in ViewBag.foodnew)
                            {
                                <a asp-action="Detail" asp-controller="Home" asp-route-Id="@food.Id" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/image/food/@food.Image" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@food.Title</h6>
                                        <span>@food.Price</span>
                                    </div>
                                </a>
                            }
                        </div>
                       
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="latest-product__text">
                    <h4>Top Món ăn mua nhiều nhất</h4>
                    <div class="latest-product__slider owl-carousel">
                        <div class="latest-prdouct__slider__item">
                            @foreach (var food in ViewBag.Topfood)
                            {
                                <a asp-action="Detail" asp-controller="Home" asp-route-Id="@food.Id" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="~/image/food/@food.Image" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@food.Title</h6>
                                        <span>@food.Price</span>
                                    </div>
                                </a>
                            }
                        </div>
                      
                    </div>
                </div>
            </div>
          
        </div>
    </div>
</section>