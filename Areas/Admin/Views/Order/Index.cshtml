
@model IEnumerable<FoodOrder.Models.Order.OrderModel>

@{
    ViewData["Title"] = "order Listed";
}
<h3>
   danh sách hóa đơn
</h3>
<table class="table table-light" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">Tên</th>
            <th scope="col">Ngày đặt hàng</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Trạng thái giao hàng</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrderCode</td>

                <td>@item.UserName</td>
                <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class=" text-primary">Đơn hàng mới</span>
                    }
                    else if (item.Status == 0)
                    {
                        <span class=" text-success">Đã hoàn thành</span>
                    }
                    else
                    {
                        <span class=" text-danger">Đã hủy</span>
                    }
                </td>
                <td>
                    @if (item.Delivery_Status == 1)
                    {
                        <span class=" text-primary">chưa giao</span>
                    }
                    else if (item.Status == 0)
                    {
                        <span class=" text-success">Đã giao</span>
                    }
                    else
                    {
                        <span class=" text-danger">Đã hủy đơn</span>
                    }
                </td>
                <td>
                    <a asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode" class="btn btn-warning">Chi tiết </a>
                    <a asp-action="Delete" asp-controller="Order" asp-route-Id="@item.Id" class="btn btn-danger confirmDeletion">Hủy </a>
                </td>
            </tr>

        }
    </tbody>
</table>
