@model AppUserModel

@{
    ViewData["title"] = " Create user";
}
<h3>Create User</h3>
<div class="row">
    <div class="col-9">
        <form method="post" asp-action="Create" asp-controller="User">

            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="UserName" type="text" required class="form-control" />
                <span asp-validation-for="UserName" class="text-danger">

                </span>

            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" required type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-danger">

                </span>

            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input asp-for="PhoneNumber" required type="text" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger">

                </span>

            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="PasswordHash" required type="text" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger">

                </span>

            </div>

            <div class="form-group">
                <label>Roles</label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                </select>
                <span asp-validation-for="RoleId" class="text-danger">

                </span>

            </div>







            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    Create
                </button>
            </div>
        </form>
        <a asp-action="Index" asp-controller="User">Back to list user</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");


    }
}
