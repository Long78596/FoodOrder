@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role Listed";
    
}
<h3>
    Danh sách
</h3>
<a asp-action="Create" asp-controller="Role">Thêm mới quyền</a>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên quyền</th>
            <th scope="col">Quyền</th>

            <th scope="col">Role Management</th>

        </tr>
    </thead>
    <tbody class="table-light">
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>


                <td>
                    <a asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-warning">Edit </a>
                    <a asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-danger confirmDeletion">Delete </a>
                </td>
            </tr>

        }
    </tbody>
</table>
