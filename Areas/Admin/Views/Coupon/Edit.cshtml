@model CouponModel
@{
    ViewData["title"] = "Cập nhật  Mã giảm giá mới";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 col-12 mx-auto">
            <div class="card mt-5">
                <div class="card-header">
                    <h3>Cập nhật mới Mã</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Coupon" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="form-label">Tên Mã khuyến mãi</label>
                            <input asp-for="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Ngày bắt đầu</label>
                            <input asp-for="DateStart" type="date" class="form-control" />
                            <span asp-validation-for="DateStart" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Ngày hết hạn</label>
                            <input asp-for="DataExpired" type="date" class="form-control" />
                            <span asp-validation-for="DataExpired" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">số lượng</label>
                            <input asp-for="Quantity" type="number" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Trạng thái</label>
                            <select asp-for="Status" class="form-control">
                                <option>--Chọn hiển thị</option>
                                <option value="true">Còn hạn</option>


                            </select>
                            <span asp-validation-for="Status" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Edit</button>

                        </div>
                    </form>
                    <a asp-action="index" asp-controller="Coupon" class="text-decoration-underline-none mt-2">Danh sách Mã giảm giá </a>

                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


