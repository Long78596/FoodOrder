@model ShipperModel
@{
    ViewData["title"] = " Edit user";
}
<div class="container">
    <h3> thông tin tài khoản</h3>
    <div class="row">
        <div class="col-9">
            <form autocomplete="off" method="post" asp-action="UpdateInfoAccount" asp-controller="Account">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group">
                    <label>Tên</label>
                    <input asp-for="UserName" type="text" required class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger">
                    </span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email"  required type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger">

                    </span>
                </div>
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input asp-for="PhoneNumber" required type="text" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger">
                    </span>

                </div>
                
                <div class="form-group">
                    <label>Mật khẩu mới</label>
                    <input required type="text" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger">
                    </span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                     chỉnh sửa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
